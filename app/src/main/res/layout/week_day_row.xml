<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/week_date_text"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Maanantai"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/week_date_numberic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.3.2021"
        app:layout_constraintStart_toStartOf="@+id/week_date_text"
        app:layout_constraintTop_toBottomOf="@+id/week_date_text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/day_medications"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/week_date_text"
        app:layout_constraintTop_toTopOf="@+id/week_date_text" />

</androidx.constraintlayout.widget.ConstraintLayout>